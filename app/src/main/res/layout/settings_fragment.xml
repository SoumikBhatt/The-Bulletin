<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_16"
    style="@style/ParentLayoutBackgroundAppearance"
    tools:context=".features.settings.presenter.ui.SettingsFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:theme="@style/HeadlineTextAppearance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_settings"
        android:text="@string/dark_mode"
        android:theme="@style/SettingsMenuTitleTextAppearance"
        app:drawableEndCompat="@drawable/ic_dark_mode"
        android:layout_marginTop="@dimen/margin_32"
        android:id="@+id/tv_menu_theme"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_menu_theme"
        android:id="@+id/tv_menu_theme_desc"
        android:text="@string/switch_app_theme_to_dark_mode"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_menu_theme_desc"
        android:text="@string/help_center"
        android:theme="@style/SettingsMenuTitleTextAppearance"
        app:drawableEndCompat="@drawable/ic_baseline_help_outline_24"
        android:layout_marginTop="@dimen/margin_24"
        android:id="@+id/tv_menu_help"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_menu_help"
        android:id="@+id/tv_menu_help_desc"
        android:text="@string/find_answers_to_your_app_related_questions_here"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_menu_help_desc"
        android:text="@string/send_feedback"
        android:theme="@style/SettingsMenuTitleTextAppearance"
        app:drawableEndCompat="@drawable/ic_feedback_32"
        android:layout_marginTop="@dimen/margin_24"
        android:id="@+id/tv_menu_feedback"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_menu_feedback"
        android:id="@+id/tv_menu_feedback_desc"
        android:text="@string/help_us_make_the_app_better"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_menu_feedback_desc"
        android:text="@string/about_us"
        android:theme="@style/SettingsMenuTitleTextAppearance"
        app:drawableEndCompat="@drawable/ic_outline_info_24"
        android:layout_marginTop="@dimen/margin_24"
        android:id="@+id/tv_menu_about"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_menu_about"
        android:id="@+id/tv_menu_about_desc"
        android:text="@string/know_about_the_developers"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_menu_about_desc"
        android:text="@string/app_version"
        android:theme="@style/SettingsMenuTitleTextAppearance"
        android:layout_marginTop="@dimen/margin_24"
        android:id="@+id/tv_menu_version"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_menu_version"
        android:id="@+id/tv_menu_version_desc"
        tools:text="1.0.0 (1)"/>


</androidx.constraintlayout.widget.ConstraintLayout>